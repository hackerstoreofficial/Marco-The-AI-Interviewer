# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=database/marco_interviews.db

# Upload Directory
UPLOAD_DIR=backend/uploads

# Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# IMPORTANT: Generate a new key for production!
ENCRYPTION_KEY=your-encryption-key-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Service Configuration
TTS_ENGINE=pyttsx3
STT_MODEL=base

# Face Tracking Configuration
FACE_YAW_THRESHOLD=30.0
FACE_LOOKING_AWAY_DURATION=2.0

# API Keys (User provides during interview - these are optional defaults)
# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=AIza...
# GROQ_API_KEY=gsk_...
# ANTHROPIC_API_KEY=sk-ant-...
